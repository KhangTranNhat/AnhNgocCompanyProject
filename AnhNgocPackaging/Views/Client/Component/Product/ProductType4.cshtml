@model ListProductResultDto;
@{
    var component = Model.Component;
    var content = component.Content;
    var categorySlug = component.Extra["product_category_slug"] as string;
}
<section class="top-ratting-book-section fix section-padding section-bg">
    <div class="container">
        <div class="top-ratting-book-wrapper">
            <div class="section-title-area">
                <div class="section-title">
                    <h2 class="wow fadeInUp" data-wow-delay=".3s">@content.Title</h2>
                </div>
                <a asp-controller="PageOnline" asp-action="Product" asp-route-danh-muc="@categorySlug" class="theme-btn transparent-btn wow fadeInUp" data-wow-delay=".5s">
                    @content.ButtonText <i class="fa-solid fa-arrow-right-long"></i>
                </a>
            </div>
            <div class="row">
                @for(var i = 0; i< Model.Items.Count();i++)
                {
                    var s = i % 2 == 0 ? 3 : 5;
                    <div class="col-xl-6 wow fadeInUp" data-wow-delay="@($".{s}s")">
                        <div class="top-ratting-box-items">
                            <div class="book-thumb">
                                <a href="shop-details.html">
                                    <img src="/images/top-book/01.png" alt="img">
                                </a>
                            </div>
                            <div class="book-content">
                                <div class="title-header">
                                    <div>
                                        <h5> Design Low Book </h5>
                                        <h3>
                                            <a href="shop-details.html">Simple Things You To Save BOOK</a>
                                        </h3>
                                    </div>
                                    <ul class="shop-icon d-flex justify-content-center align-items-center">
                                        <li>
                                            <a href="shop-cart.html"><i class="far fa-heart"></i></a>
                                        </li>
                                        <li>
                                            <a href="shop-cart.html">
                                                <img class="icon" src="/images/icon/shuffle.svg" alt="svg-icon">
                                            </a>
                                        </li>
                                        <li>
                                            <a href="shop-details.html"><i class="far fa-eye"></i></a>
                                        </li>
                                    </ul>
                                </div>
                                <span class="mt-10">$30.00</span>
                                <ul class="author-post">
                                    <li class="authot-list">
                                        <span class="thumb">
                                            <img src="/images/testimonial/client-2.png" alt="img">
                                        </span>
                                        <span class="content mt-10">Wilson</span>
                                    </li>
                                </ul>
                                <div class="shop-btn">
                                    <div class="star">
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-regular fa-star"></i>
                                    </div>
                                    <a href="shop-details.html" class="theme-btn">
                                        <i class="fa-solid fa-basket-shopping"></i> Add To Cart
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
             
            </div>
        </div>
    </div>
</section>