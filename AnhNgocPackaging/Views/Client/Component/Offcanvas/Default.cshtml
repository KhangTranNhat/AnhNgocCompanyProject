@model OffcanvasParamDto;
@{
    var contact = Model.Company.Contact;
    var logo = Model.Company.Info.PrimaryLogo;
}
<div class="fix-area">
    <div class="offcanvas__info">
        <div class="offcanvas__wrapper">
            <div class="offcanvas__content">
                <div class="offcanvas__top mb-5 d-flex justify-content-between align-items-center">
                    <div class="offcanvas__logo">
                        <a href="index.html">
                            <img src="@logo" alt="logo-img">
                        </a>
                    </div>
                    <div class="offcanvas__close">
                        <button>
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                 <p class="text d-none d-xl-block">
                    @Html.Raw($"{@contact.Description}")
                 </p> 
                <div class="mobile-menu fix mb-3"></div>
                <div class="offcanvas__contact">
                    <h4>Thông tin liên hệ</h4>
                    <ul>
                        <li class="d-flex align-items-center">
                            <div class="offcanvas__contact-icon">
                                <i class="fal fa-map-marker-alt"></i>
                            </div>
                            <div class="offcanvas__contact-text">
                                <a target="_blank" href="index-2.html">@Html.Raw($"{@contact.PrimaryAddress}")</a>
                            </div>
                        </li>
                        <li class="d-flex align-items-center">
                            <div class="offcanvas__contact-icon mr-15">
                                <i class="fal fa-envelope"></i>
                            </div>
                            <div class="offcanvas__contact-text">
                                <a href="mailto:{@contact.PrimaryEmail}">
                                    <span class="mailto:{@contact.PrimaryEmail}">@contact.PrimaryEmail</span>
                                </a>
                            </div>
                        </li>
                        <li class="d-flex align-items-center">
                            <div class="offcanvas__contact-icon mr-15">
                                <i class="fal fa-clock"></i>
                            </div>
                            <div class="offcanvas__contact-text">
                                <a target="_blank" href="index-2.html">@contact.OpeningHourWorking</a>
                            </div>
                        </li>
                        <li class="d-flex align-items-center">
                            <div class="offcanvas__contact-icon mr-15">
                                <i class="far fa-phone"></i>
                            </div>
                            <div class="offcanvas__contact-text">
                                <a href="tel:@contact.PrimaryPhone.Replace(" ", "")">@contact.PrimaryPhone</a>
                            </div>
                        </li>
                    </ul>
                    <div class="header-button mt-4">
                        <a asp-action="Contact" asp-controller="PageOnline" class="theme-btn text-center">
                            Liện hệ với chúng tôi <i class="fa-solid fa-arrow-right-long"></i>
                        </a>
                    </div>
                    <div class="social-icon d-flex align-items-center">
                        <a href="@contact.SocialMedia.Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="@contact.SocialMedia.Instagram"><i class="fab fa-twitter"></i></a>
                        <a href="@contact.SocialMedia.YouTube"><i class="fab fa-youtube"></i></a>
                        <a href="@contact.SocialMedia.LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="offcanvas__overlay"></div>